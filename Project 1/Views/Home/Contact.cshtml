@{
    ViewBag.Title = "Contact Us";
}

<div class="container">
    <h2>@ViewBag.Title</h2>
    <h3>@ViewBag.Message</h3>
</div>

<div class="container">
   
        790 Tanner Building<br />
        Provo, UT 84604-6399<br />
        801.422.3247<br /><br />
   

    
        <strong>Academic Advisor:</strong>   <a href="mailto:is.advisor@byu.edu">is.advisor@byu.edu</a><br />
        <strong>MISM Advisor:</strong>   <a href="mailto:mism@byu.edu">mism@byu.edu</a><br />
        <strong>Marriott School:</strong> <a href="mailto:marriottschool@byu.edu">marriottschool@byu.edu</a>
   
</div>


<div class="container">
    <div id="feedback">

        <div class="col-md-12">
            
                <form role="form">
                    <h3>Contact Form</h3>

                    <div class="form-group">
                        <input type="text" class="form-control" id="name" name="name" placeholder="Name" required>
                    </div>

                    <div class="form-group">
                        <input type="text" class="form-control" id="email" name="email" placeholder="Email" required>
                    </div>

                    <div class="form-group">
                        <input type="text" class="form-control" id="subject" name="subject" placeholder="Subject" required>
                    </div>

                    <div class="form-group">
                        <select class="form-control">
                            <option value="0">Please Select a Subject</option>
                            <option value="1">I want to talk to a current student</option>
                            <option value="2">I want to talk to an alumni</option>
                            <option value="3">Miscellaneous Question(s)</option>
                            <option value="4">Other</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <textarea class="form-control" type="textarea" id="message" placeholder="Message" maxlength="140" rows="7"></textarea>
                    </div>


                    <button type="reset" id="submit" name="submit" class="btn btn-primary">Submit Form</button>

                </form>
            </div>
        </div>
    </div>


<br />

