@model Project_1.Models.DegreeQuestions

@{
    ViewBag.Title = "Edit";
}

<h2>Answer A Question</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.degreeQuestionID)
        @Html.HiddenFor(model => model.degreeID)
        @Html.HiddenFor(model => model.userID)
        @Html.HiddenFor(model => model.question)



        <div class="container">
            <div class="col-md-10">
                @*@Html.LabelFor(model => model.question, "Question: ")<br />*@
                <h3>@Html.DisplayFor(model => model.question)</h3>
            </div>
        </div>

        <br />

        <div class="container">
            @Html.LabelFor(model => model.answer, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="row">
                @Html.EditorFor(model => model.answer, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.answer, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

